{
  "manifest_version": 3,
  "name": "Dropout Helper",
  "description": "Dropout but it saves your volume and subtitle settings. It also adds Watch Parties.",
  "version": "1.7.0",
  "action": {
    "default_icon": "icons/dropout.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icons/dropout-48.png",
    "96": "icons/dropout-96.png"
  },
  "host_permissions": [
    "https://www.dropout.tv/*",
    "https://embed.vhx.tv/videos/*"
  ],
  "permissions": [
    "declarativeNetRequestWithHostAccess"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.dropout.tv/*"
      ],
      "js": [
        "js/dropout.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://embed.vhx.tv/videos/*"
      ],
      "all_frames": true,
      "js": [
        "js/vhx-embed.js"
      ],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/vhx-embed.js"
      ],
      "matches": [
        "https://embed.vhx.tv/*"
      ]
    }
  ],
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dropout-helper@kurtthiemann.com"
    }
  }
}
